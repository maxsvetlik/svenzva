<launch>
  <arg name="joy_dev" default="/dev/input/js0"/>

  <!-- joy node -->
  <node respawn="true" pkg="joy" type="joy_node" name="svenzva_joy_node" >
    <param name="dev" type="string" value="$(arg joy_dev)" />
    <param name="deadzone" value="0.4" />
    <param name="autorepeat_rate" value="1"/>
    <param name="coalesce_interval" value="0.1"/>
  </node>

  <!-- Axes -->
  <param name="rate" value="5" type="int"/>
  <param name="axis_linear_x" value="0" type="int"/>
  <param name="axis_linear_y" value="1" type="int"/>
  <param name="axis_linear_z" value="4" type="int"/>
  <param name="axis_angular" value="0" type="int"/>
  <param name="scale_linear" value=".02" type="double"/>
  <param name="scale_angular" value=".1" type="double"/>
  <node pkg="svenzva_joy" type="svenzva_joystick_controller" name="svenzva_joy_manage"/>

</launch>
