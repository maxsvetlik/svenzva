<?xml version="1.0"?>
<launch>

   <include
       file="$(find gazebo_ros)/launch/empty_world.launch">
       <arg name="paused" value="true"/>
   </include>
  <node
    name="tf_footprint_base"
    pkg="tf"
    type="static_transform_publisher"
    args="0 0 0 0 0 0 base_link base_footprint 40" />
  <node
    name="spawn_model"
    pkg="gazebo_ros"
    type="spawn_model"
    args="-file $(find svenzva_description)/robots/svenzva_arm.urdf -urdf -model svenzva_description -robot_namespace revel"
    output="screen" />

  <param name="robot_description" command="cat $(find svenzva_description)/robots/svenzva_arm.urdf" />

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find svenzva_drivers)/config/controller_params.yaml" command="load"/>

  <!-- Load individual joint controllers.
       Note that in simulation, only one controller type can be active.
  <node name="controller" pkg="controller_manager" type="spawner" respawn="false" ns="revel"
      output="screen" args="/svenzva_controllers/joint_1 /svenzva_controllers/joint_2 /svenzva_controllers/joint_3 /svenzva_controllers/joint_4 /svenzva_controllers/joint_5 /svenzva_controllers/joint_6 /svenzva_controllers/joint_state_controller " />
  -->
   
   <!-- Velocity control -->
   <!--
   <node name="controller" pkg="controller_manager" type="spawner" respawn="false" ns="revel"
      output="screen" args="/svenzva_controllers/joint_1_vel /svenzva_controllers/joint_2_vel /svenzva_controllers/joint_3_vel /svenzva_controllers/joint_4_vel /svenzva_controllers/joint_5_vel /svenzva_controllers/joint_6_vel /svenzva_controllers/joint_state_controller " />
   -->
 
  <!-- Load Joint Trajectory Controller --> 
  <node name="controller" pkg="controller_manager" type="spawner" respawn="false" ns="revel"
      output="screen" args="/svenzva_controllers/joint_state_controller /revel " />

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
      respawn="false" output="screen">
      <remap from="/joint_states" to="/revel/joint_states" />
  </node>

  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
      <rosparam param="/source_list">[/revel/joint_states]</rosparam>
  </node> 

</launch>
